<div class="file_member_actions">
  <% if can?(:download, file_set.id) %>
   <span>
      <a href="<%=url_for( hyrax.download_path(file_set))%>" title="Download <%=file_set.to_s.inspect%>", target="_blank">
        <span class="sr-only">Download</span>
        <span class="fa fa-download"></span>
    </span>
  <% end %>

  <% if can?(:edit, file_set.id) %>
    <span>
      <a href="<%=url_for(edit_polymorphic_path([main_app, file_set]))%>" title="Edit <%=file_set%>">
        <span class="sr-only">Edit</span>
        <span class="fa fa-edit"></span>
      </a>
    </span>
    <span>
      <a href="<%=url_for(edit_polymorphic_path([main_app, file_set]))%>#versioning_display" title="Display previous versions">
        <span class="sr-only">Previous versions</span>
        <span class="fa fa-copy"></span>
      </a>
    </span>
  <% end %>

  <% if can?(:destroy, file_set.id) %>
    <% confirm = "Deleting #{file_set} from #{application_name} is permanent. Click OK to delete this from #{application_name}, or Cancel to cancel this operation" %>
    <span>
      <a href="<%=url_for(polymorphic_path([main_app, file_set]))%>" data-method="delete", title="Delete #{file_set}" data-confirm="<%confirm=%>">
        <span class="sr-only">Delete</span>
        <span class="fa fa-trash-alt"></span>
    </span>
  <% end %>

</div>

